generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Reccurence types are used for scheduling tasks
// They define how often a task should repeat
enum RecurrenceType {
  none
  daily
  weekly
  monthly
  yearly
}

// TaskStatus represents the current state of a task
// It helps in tracking the progress of tasks
enum TaskStatus {
  pending
  in_progress
  completed
  cancelled
}

// ApartmentMember model represents the association between users and apartments
// It includes the role of the user within the apartment
enum ApartmentRole {
  owner
  member
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  apartments    ApartmentMember[]
  assignedTasks Task[]            @relation("AssignedTasks")

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// Apartment model represents a shared living space
// It includes fields for name, owner, members, tasks, and categories
model Apartment {
  id      String @id @default(cuid())
  name    String
  ownerId String // créateur (admin par défaut)

  members    ApartmentMember[]
  tasks      Task[]
  categories TaskCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

// ApartmentMember model represents the association between users and apartments
// It includes the role of the user within the apartment
model ApartmentMember {
  id          String        @id @default(cuid())
  apartmentId String
  userId      String
  role        ApartmentRole @default(member)

  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt DateTime @default(now())

  @@unique([apartmentId, userId])
  @@index([userId])
}

// Task model represents a task in the task management system
// It includes fields for title, description, status, recurrence, and relations to user and category
model TaskCategory {
  id          String @id @default(cuid())
  apartmentId String

  name  String
  color String?
  icon  String?

  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  tasks     Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([apartmentId, name])
  @@index([apartmentId])
}

// TaskOccurrence model represents each occurrence of a recurring task
// It helps in tracking individual instances of a recurring task
model Task {
  id          String @id @default(cuid())
  apartmentId String

  title       String
  description String?

  recurrenceType     RecurrenceType
  recurrenceInterval Int            @default(1)
  startDate          DateTime
  endDate            DateTime?
  isActive           Boolean        @default(true)

  categoryId String?
  category   TaskCategory? @relation(fields: [categoryId], references: [id])

  parentTaskId String?
  parentTask   Task?   @relation("TaskHierarchy", fields: [parentTaskId], references: [id])
  subTasks     Task[]  @relation("TaskHierarchy")

  assignedToUserId String?
  assignedTo       User?   @relation("AssignedTasks", fields: [assignedToUserId], references: [id])

  apartment   Apartment        @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  occurrences TaskOccurrence[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([apartmentId])
  @@index([categoryId])
  @@index([parentTaskId])
  @@index([assignedToUserId])
}

// TaskOccurrence model represents each occurrence of a recurring task
// It helps in tracking individual instances of a recurring task
model TaskOccurrence {
  id     String @id @default(cuid())
  taskId String

  scheduledDate DateTime
  status        TaskStatus @default(pending)
  workload      Int        @default(1)

  task        Task             @relation(fields: [taskId], references: [id], onDelete: Cascade)
  completions TaskCompletion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([taskId, scheduledDate])
  @@index([scheduledDate])
}

// TaskCompletion model records the completion of a task occurrence
// It includes the workload done and the completion timestamp
model TaskCompletion {
  id               String @id @default(cuid())
  taskOccurrenceId String

  workloadDone Int
  completedAt  DateTime @default(now())

  taskOccurrence TaskOccurrence @relation(fields: [taskOccurrenceId], references: [id], onDelete: Cascade)

  @@index([completedAt])
}
